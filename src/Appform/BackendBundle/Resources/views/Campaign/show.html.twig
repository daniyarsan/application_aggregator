{% extends 'AppformBackendBundle:Base:admin_base.html.twig' %}

{% block content -%}
	<div class="page-title">
		<h2><span class="fa fa-arrow-circle-o-left"></span>Campaign</h2>
	</div>
	<!-- PAGE CONTENT WRAPPER -->
	<div class="page-content-wrap">
		<!-- START WIDGETS -->
		<div class="row">
			<div class="col-md-12">
				<table class="table table-responsive record_properties">
					<tbody>
					<tr>
						<th>Id</th>
						<td>{{ entity.id }}</td>
					</tr>
					<tr>
						<th>Name</th>
						<td>{{ entity.name }}</td>
					</tr>
					<tr>
						<th>Subject</th>
						<td>{{ entity.subject }}</td>
					</tr>
					<tr>
						<th>Publishat</th>
						<td>{{ entity.publishat|date('Y-m-d H:i:s') }}</td>
					</tr>
					<tr>
						<th>Publishdate</th>
						<td>{{ entity.publishdate|date('Y-m-d H:i:s') }}</td>
					</tr>
					<tr>
						<th>Ispublished</th>
						<td>{{ entity.ispublished }}</td>
					</tr>
					</tbody>
				</table>

				<ul class="record_actions">
					<li>
						<a href="{{ path('campaign') }}">
							Back to the list
						</a>
					</li>
					<li>
						<a href="{{ path('campaign_edit', { 'id': entity.id }) }}">
							Edit
						</a>
					</li>
					<li>{{ form(delete_form) }}</li>
				</ul>
			</div>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	{{ parent() }}
{% endblock %}

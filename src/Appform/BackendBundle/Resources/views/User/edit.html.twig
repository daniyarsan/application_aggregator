{% extends '@AppformBackend/Base/admin_base.html.twig' %}

{% block content %}
	<div class="page-title">
		<h2>{{ "Edit User"|trans }}</h2>
	</div>
	<!-- PAGE CONTENT WRAPPER -->
	<div class="page-content-wrap">
		<!-- START WIDGETS -->
		<div class="col-md-12">
			{% include '@AppformBackend/Base/messages.html.twig' %}
		</div>
		<div class="col-md-6 col-md-offset-1">
			{{ form_errors(form) }}
			<form id="user-form" action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}
			      class="form-horizontal" role="form">
				{{ form(form) }}

				<button type="button" class="btn btn-default"
				        onclick="javascript: location.href='{{ path('user_list') }}'">{% trans %}
					Cancel{% endtrans %}</button>
			</form>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	{{ parent() }}
{% endblock %}
<div class="panel panel-warning">
	{{ form_start(search_form) }}
	<div class="panel-heading">
		<h3 class="panel-title">Filter Applicants</h3>
		<ul class="panel-controls">
			<li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
			<li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
		</ul>
	</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					{{ form_widget(search_form.discipline) }}
				</div>
				<div class="form-group">
					{{ form_widget(search_form.state) }}
				</div>
				<div class="form-group">
					{{ form_widget(search_form.isExperiencedTraveler) }}
				</div>
				<div class="form-group">
					{{ form_widget(search_form.isOnAssignement) }}
				</div>
				{{ form_row(search_form.generate_report) }}
				{{ form_row(search_form.show_all) }}
			</div>
			<div class="col-md-6">
				<div class="form-group">
					{{ form_widget(search_form.specialtyPrimary) }}
				</div>
				<div class="form-group">
					{{ form_widget(search_form.hasResume) }}
				</div>
				<div class="form-group">
					{{ form_widget(search_form.referrers) }}
				</div>
				<div class="form-group">
					{{ form_widget(search_form.candidateId) }}
				</div>
				<div class="form-group">
					{{ form_widget(search_form.name) }}
				</div>
				<div class="row">
					<div class="col-md-6 form-group">
						{{ form_label(search_form.fromdate) }}
						<div class="input-group">
							{{ form_widget(search_form.fromdate) }}
							<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
						</div>
					</div>
					<div class="col-md-6 form-group">
						{{ form_label(search_form.todate) }}
						<div class="input-group">
							{{ form_widget(search_form.todate) }}
							<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
						</div>
					</div>
				</div>
			</div>
			<hr />
		</div>
	</div>
	<div class="panel-footer">
		<div class="col-md-6">
			{{ form_widget(search_form.search) }}
			{% if fileName %}<a class="label label-success" href="{{ url('appform_frontend_homepage') }}reports/{{ fileName }}">Download Report</a>{% endif %}
		</div>
		<div class="col-md-6">
			<a href="{{ path('user_list') }}" class="btn btn-default">Reset Search</a>
		</div>
	</div>
	{{ form_end(search_form) }}
</div>
{% extends 'AppformBackendBundle:Base:admin_base.html.twig' %}

{% block content -%}
<div class="page-title">
	<h2><span class="fa fa-arrow-circle-o-left"></span>Agency list</h2>
</div>
<div class="pull-right">
	<a class="btn btn-success dropdown-toggle" href="{{ path('agency_new') }}">
		<i class="fa fa-bars"></i> Create new Agency
	</a>
</div>


<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">
	<!-- START WIDGETS -->
	<div class="row">
		<div class="col-md-12">
			<table class="table table-responsive records_list">
				<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Email</th>
					<th>Description</th>
					<th>Agency Group</th>
					<th>Actions</th>
				</tr>
				</thead>
				<tbody>
				{% for entity in entities %}
					<tr {% if entity.active != 1 %}style="opacity: 0.5;" {% endif %}>
						<td><a href="{{ path('agency_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
						<td>{{ entity.name }}</td>
						<td>{{ entity.email }}</td>
						<td>{{ entity.description }}</td>
						<td><a href="{{ path('agencygroup_show', { 'id': entity.agencygroup.id }) }}">{{ entity.agencygroup }}</a></td>
						<td>
							<a href="{{ path('agency_edit', { 'id': entity.id }) }}" class="btn btn-success"><i class="fa fa-pencil"></i></a>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}

{% block scripts %}
	{{ parent() }}
{% endblock %}

{% extends 'AppformBackendBundle:Base:admin_base.html.twig' %}
{% import '@AppformBackend/Form/dialog.html.twig' as dialogs %}

{% block content -%}
	<div class="page-title">
		<h2><span class="fa fa-arrow-circle-o-left"></span>AgencyGroup list</h2>
	</div>
	<div class="pull-right">
		<a class="btn btn-success dropdown-toggle" href="{{ path('agencygroup_new') }}">
			<i class="fa fa-bars"></i> Create new Agency Group
		</a>
	</div>
	<!-- PAGE CONTENT WRAPPER -->
	<div class="page-content-wrap">
		<!-- START WIDGETS -->
		<div class="row">
			<div class="col-md-12">
				<table class="table table-responsive records_list">
					<thead>
					<tr>
						<th>Order</th>
						<th>Name</th>
						<th>Agencies</th>
						<th>Actions</th>
					</tr>
					</thead>
					<tbody>
					{% for entity in entities %}
						<tr>
							<td><a href="{{ path('agencygroup_show', { 'id': entity.id }) }}">{{ entity.sorting }}</a></td>
							<td>{{ entity.name }}</td>
							<td><button class="btn btn-success toggle" data-toggle="agencyList-{{ entity.id  }}"><i class="fa fa-bars"></i>View Agencies</button>
								<div class="panel-body hidden" id="agencyList-{{ entity.id  }}" style="display: none;">
									<div class="row">
										<div class="col-md-3">
											<div class="list-group border-bottom">
												{% for agency in entity.agencies %}
													<a class="label label-default" href="{{ path('agency_show', {'id':agency.id}) }}">{{ agency.name }}</a>
												{% endfor %}
											</div>
										</div>
									</div>
								</div>
							</td>
							<td>
								<a href="{{ path('agencygroup_edit', { 'id': entity.id }) }}" class="btn btn-success"><i class="fa fa-pencil"></i></a>
								<a data-toggle="modal" href="#agency-group-remove" class="btn btn-warning"><i class="glyphicon glyphicon-remove"></i></a>
								{{ dialogs.remove_group('agency-group-remove', 'Remove Agency Group', path('agencygroup_delete', {'id': entity.id})) }}
							</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>
			</div>
		</div>
{% endblock %}

{% block scripts %}
	{{ parent() }}
{% endblock %}
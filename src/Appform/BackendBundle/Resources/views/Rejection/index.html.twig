{% extends 'AppformBackendBundle:Base:admin_base.html.twig' %}

{% block content -%}
	<div class="page-title">
		<h2>Rejection list</h2>
	</div>

	<div class="pull-right">
		<a class="btn btn-success dropdown-toggle" href="{{ path('reject_new') }}">
			<i class="fa fa-bars"></i> Create new Rejection Rule
		</a>
	</div>

	<!-- PAGE CONTENT WRAPPER -->
	<div class="page-content-wrap">
		<!-- START WIDGETS -->
		<div class="row">
			<div class="col-md-12">
				<table class="table table-responsive records_list">
					<thead>
					<tr>
						<th>Name</th>
						<th>Vendor</th>
						<th>Vendor Type</th>
						<th>Actions</th>
					</tr>
					</thead>
					<tbody>
					{% for entity in entities %}
						<tr>
							<td><a href="{{ path('reject_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
							<td><a href="{{ path('reject_show', { 'id': entity.id }) }}">{{ entity.vendor }}</a></td>
							<td><a href="{{ path('reject_show', { 'id': entity.id }) }}">{{ entity.vendorType }}</a></td>
							<td>
								<a href="{{ path('reject_edit', { 'id': entity.id }) }}" class="btn btn-success"><i class="fa fa-pencil"></i></a>
								<a href="{{ path('reject_delete', { 'id': entity.id }) }}" class="btn btn-danger"><i class="fa fa-remove"></i></a>
							</td>
						</tr>
					{% endfor %}
					</tbody>

				</table>
			</div>
		</div>
	</div>

{% endblock %}

{% block scripts %}
	{{ parent() }}
{% endblock %}
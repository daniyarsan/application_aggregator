	{% if app.session.flashBag.has('searchString') %}
		{% set searchString = app.session.flashBag.get('searchString').0 %}
	{% endif %}
	{% if app.session.flashBag.has('location') %}
		{% set location = app.session.flashBag.get('location').0 %}
	{% endif %}

	<script type="text/javascript">
		$(document).ready(function(){
			setTimeout(function() {
				window.top.location.href = "https://healthcaretravelers.com/zipsearch?{% if searchString is defined %}title={{ searchString }}{% endif %}{% if location is defined %}&location={{ location }}{% endif %}";
			}, 10)
		});
	</script>

	<script src='https://jobs.thejobnetwork.com/Tracking/Ex/JobEndApply'></script>

	<!-- Beginning of Glassdoor Application Tracking Code -->

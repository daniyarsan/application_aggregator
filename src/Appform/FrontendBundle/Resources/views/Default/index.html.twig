{% block content %}

	<nav class="navbar navbar-inverse navbar-no-bg" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-navbar-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="index.html">Healthcaretravelers More info Request</a>
			</div>
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="top-navbar-1">
				<ul class="nav navbar-nav navbar-right">
					<li>
							<span class="li-text">
								Contact us
							</span>
								<span class="li-social">
								<a href="https://www.facebook.com/HealthCareTravelerJobs/app_301632659950696"><i class="fa fa-facebook"></i></a>
								<a href="mailto:daniyar.san@gmail.com"><i class="fa fa-envelope"></i></a>
								<a href="skype:tonagual?call"><i class="fa fa-skype"></i></a>
							</span>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<!-- Top content -->
	<div class="top-content">
		<div class="inner-bg">
			<div class="container">
				<div class="row">
					<div class="col-sm-8 col-sm-offset-2 text">
						<h1><strong>More Info</strong> Request</h1>
						<div class="description">
							<p>Nation's Top HCEN Client Staffing Agencies</p>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-6 col-sm-offset-3 form-box">
						<div class="form-top">
							<div class="form-top-left">
								<h3>More info Form</h3>
								<p>be aware about required fields:</p>
							</div>
							<div class="form-top-right">
								<i class="fa fa-pencil"></i>
							</div>
						</div>
						<div class="form-bottom">
							{% for message in app.session.flashbag.get('error') %}
								<div class="alert alert-danger alert-dismissible" role="alert">
									<button type="button" class="close" data-dismiss="alert">
										<span aria-hidden="true">&times;</span>
										<span class="sr-only">Close</span>
									</button>
									<p>{{ message }}</p>
								</div>
							{% endfor %}

							{% for message in app.session.flashbag.get('success') %}
								<div class="alert alert-success alert-dismissible" role="alert">
									<button type="button" class="close" data-dismiss="alert">
										<span aria-hidden="true">&times;</span>
										<span class="sr-only">Close</span>
									</button>
									<p>{{ message }}</p>
								</div>
							{% endfor %}
							<form id="moreinfo" class="registration-form" action="{{ url('appform_frontend_homepage') }}" method="post" {{ form_enctype(form) }} data-toggle="validator" role="form">
								<div id="message">
									{{ form_errors(form) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.firstName, {'attr': {'placeholder': '* First Name'}}) }}
									{{ form_errors(form.firstName) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.lastName, {'attr': {'placeholder': '* Last Name'}}) }}
									{{ form_errors(form.lastName) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.email, {'attr': {'placeholder': '* Email'}}) }}
									{{ form_errors(form.email) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.state, {'placeholder': '* State'}) }}
									{{ form_errors(form.personalInformation.state) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.phone, {'attr': {'placeholder': '* Phone'}}) }}
									{{ form_errors(form.personalInformation.phone) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.isExperiencedTraveler, {'placeholder': '* Are you an experienced Traveler?'}) }}
									{{ form_errors(form.personalInformation.isExperiencedTraveler) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.discipline, {'placeholder': '* Discipline / Professional License'}) }}
									{{ form_errors(form.personalInformation.discipline) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.licenseState, {'placeholder': '* Licensed State(s)'}) }}
									{{ form_errors(form.personalInformation.licenseState) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.specialtyPrimary, {'placeholder': '* Specialty - Primary'}) }}
									{{ form_errors(form.personalInformation.specialtyPrimary) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.yearsLicenceSp, {'placeholder': '* Primary specialty experience'}) }}
									{{ form_errors(form.personalInformation.yearsLicenceSp) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.specialtySecondary, {'placeholder': 'Specialty - Secondary(Optional)'}) }}
									{{ form_errors(form.personalInformation.specialtySecondary) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.yearsLicenceSs, {'placeholder': 'Secondary specialty experience'}) }}
									{{ form_errors(form.personalInformation.yearsLicenceSs) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.isOnAssignement, {'placeholder': '* On Assignment?'}) }}
									{{ form_errors(form.personalInformation.isOnAssignement) }}
								</div>
								<div class="form-group">
									{{ form_label(form.personalInformation.completion) }}
									{{ form_widget(form.personalInformation.completion, {'attr': {'placeholder': 'Assignment completion date'}}) }}
									{{ form_errors(form.personalInformation.completion) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.desiredAssignementState, {'expanded': '0', 'placeholder': '* Preferred Location'}) }}
									{{ form_errors(form.personalInformation.desiredAssignementState) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.assignementTime, {'placeholder': '* Assignment availability'}) }}
									{{ form_errors(form.personalInformation.assignementTime) }}
								</div>
								<div class="form-group">
									{{ form_widget(form.personalInformation.question, {'attr': {'placeholder': 'Question'}}) }}
									{{ form_errors(form.personalInformation.question) }}
								</div>
								{{ form_label(form.document) }}
								{{ form_widget(form.document, {'attr': {'placeholder': 'Optional upload your resume/cv'}}) }}
								{{ form_errors(form.document) }}

								<div class="form-group">
									<label class="control-label" for="">
										<img id="sf-loading" style="display:none;" src="{{ url('appform_frontend_homepage') }}widget/ajax-loader.gif" alt=""/>
									</label>
									<input id="submit" type="submit" class="btn btn-lg col-sm-12 btn-primary" value="Submit Information Request"/>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}

